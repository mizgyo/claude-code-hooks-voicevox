{
  // VOICEVOX サーバーの設定
  "voicevoxUrl": "http://localhost:50021",

  // 話者ID (1: ずんだもん ノーマル, 2: 四国めたん ノーマル)
  // https://www.voicevox.su-shiki.com/voicevox-id
  "speaker": 0,

  // 音量設定 (0.0 - 1.0)
  "defaultVolume": 1.0, // 通常のツール用音量
  "quietVolume": 0.7, // 静かなツール用音量

  // 話速 (1.0が標準、1.5で1.5倍速)
  "speedScale": 1.5,

  // 音声ファイルの一時保存ディレクトリ
  "tempDir": "/tmp/voicevox",

  // メッセージ設定
  "messages": {
    // ツール毎のメッセージ (複数設定するとランダムで選択)
    "tools": {
      "Task": ["作業を始めるわよ", "やってやるわ！", "処理中なのよ〜"],
      "Bash": ["実行してあげるわ", "コマンドね", "処理するのよ"],
      "Glob": ["探してあげるわ", "どこかしら〜", "見つけたわよ！"],
      "Grep": ["探してあげるの", "どこなのかしら", "あったわ！"],
      "LS": ["覗いてみるわ", "何があるのかしら？", "見てあげるわ"],
      "Read": ["なるほどね〜", "ふむふむなのよ", "へぇ〜そうなの"],
      "Edit": ["よしよし", "できたわよ！", "よしっ"],
      "MultiEdit": [
        "一気にやるのよ",
        "まとめてやってあげるわ",
        "よしよし"
      ],
      "Write": ["書き込むわ", "作成してあげる", "ファイル作成よ"],
      "NotebookRead": ["ノートブック読むわ"],
      "NotebookEdit": ["ノートブック編集するの"],
      "WebFetch": ["ウェブ取得するわ"],
      "WebSearch": ["ウェブ検索よ"],
      "TodoRead": ["リスト確認するわ", "なにするんだっけ..."],
      "TodoWrite": ["リスト更新するのよ"],
      "exit_plan_mode": ["このプランでどうかしら？"]
    },
    // 作業完了時のメッセージ
    "notification": [
      "完了したわよ〜",
      "終わったわ！",
      "できたのよ〜",
      "おわりよ！",
      "やったわ〜"
    ],
    // 作業終了時のメッセージ
    "stop": [
      "終了したわ〜",
      "完了よ！",
      "おつかれさま〜",
      "お疲れ様なのよ",
      "作業終了よ〜"
    ]
  }
}
