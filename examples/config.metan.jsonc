{
  // VOICEVOX サーバーの設定
  "voicevoxUrl": "http://localhost:50021",

  // 話者ID (1: ずんだもん ノーマル, 2: 四国めたん ノーマル)
  // https://www.voicevox.su-shiki.com/voicevox-id
  "speaker": 0,

  // 音量設定 (0.0 - 1.0)
  "defaultVolume": 1.0, // 通常のツール用音量
  "quietVolume": 0.7, // 静かなツール用音量

  // 話速 (1.0が標準、1.5で1.5倍速)
  "speedScale": 1.5,

  // 音声ファイルの一時保存ディレクトリ
  "tempDir": "/tmp/voicevox",

  // メッセージ設定
  "messages": {
