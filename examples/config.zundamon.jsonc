{
  // VOICEVOX サーバーの設定
  "voicevoxUrl": "http://localhost:50021",

  // 話者ID (1: ずんだもん ノーマル, 2: 四国めたん ノーマル)
  // https://www.voicevox.su-shiki.com/voicevox-id
  "speaker": 1,

  // 音量設定 (0.0 - 1.0)
  "defaultVolume": 1.0, // 通常のツール用音量
  "quietVolume": 0.7, // 静かなツール用音量

  // 話速 (1.0が標準、1.5で1.5倍速)
  "speedScale": 1.5,

  // 音声ファイルの一時保存ディレクトリ
  "tempDir": "/tmp/voicevox",

  // メッセージ設定
  "messages": {
    // ツール毎のメッセージ (複数設定するとランダムで選択)
    "tools": {
      "Task": ["作業開始なのだ", "頑張るなのだ", "処理中なのだ"],
      "Bash": ["実行するのだ", "コマンドなのだ", "処理するのだ"],
      "Glob": ["探すのだ", "どこかなぁなのだ", "見つけたのだ"],
      "Grep": ["探すのだ", "どこだろなのだ", "あったのだ"],
      "LS": ["覗いてみるのだ", "何があるのだ", "見てみるのだ"],
      "Read": ["なるほどなのだ", "ふむふむなのだ", "へぇなのだ"],
      "Edit": ["よしよしなのだ", "できたのだ", "よしなのだ"],
      "MultiEdit": ["一気にやるのだ", "まとめてやるのだ", "よしよしなのだ"],
      "Write": ["書き込むのだ", "作成するのだ", "ファイル作成なのだ"],
      "NotebookRead": ["ノートブック読むのだ"],
      "NotebookEdit": ["ノートブック編集なのだ"],
      "WebFetch": ["ウェブ取得なのだ"],
      "WebSearch": ["ウェブ検索なのだ"],
      "TodoRead": ["リスト確認なのだ", "なにするんだっけなのだ..."],
      "TodoWrite": ["リスト更新なのだ"],
      "exit_plan_mode": ["このプランでいかがなのだ？"]
    },
    // 作業完了時のメッセージ
    "notification": [
      "完了したのだ",
      "終わったのだ",
      "できたのだ",
      "おわりなのだ",
      "やったのだ"
    ],
    // 作業終了時のメッセージ
    "stop": [
      "終了したのだ",
      "完了なのだ",
      "おつかれさまなのだ",
      "お疲れ様なのだ",
      "作業終了なのだ"
    ]
  }
}